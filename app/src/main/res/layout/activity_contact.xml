<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.pizzaordering.ContactActivity"
    android:orientation="vertical"
    android:background="#FAEBD7">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarContact"
        app:title="Liên hệ"
        android:background="#5b4f4f"
        app:titleTextColor="#fff">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fc0a65ba"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin về chúng tôi"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgPhone"
                android:src="@drawable/icon_contact"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/txvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0974641631"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
           android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgLocate"
                android:src="@drawable/icon_locate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/txvLocate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ: 1-2 Lê Duẩn, Phường 1, Quận 1, Hồ Chí Minh"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgFace"
                android:src="@drawable/icon_facebook"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/txvFace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/PizzaHTH"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
