<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.pizzaordering.InformationActivity"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    android:background="#FAEBD7">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarLoginAndRegisterActivity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#5b4f4f"
        app:title="Thanh toán"
        app:titleMarginStart="135dp"
        app:titleTextColor="#fff">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:text="Thông tin khách hàng"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập vào tên khách hàng"
            android:inputType="text"
            android:id="@+id/edtNameKH"/>
        <EditText
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập vào số điện thoại"
            android:inputType="number"
            android:id="@+id/edtSDTKH"/>
        <EditText
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập vào email"
            android:inputType="textEmailAddress"
            android:id="@+id/edtEmailKH"/>
        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginRight="70dp"
                android:id="@+id/buttonXacNhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác Nhận"
                android:padding="10dp"
                android:textSize="15sp" />
            <Button
                android:id="@+id/buttonTroVe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trở về"
                android:padding="10dp"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
